{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "lib": ["esnext", "DOM", "WebWorker", "DOM.Iterable"],
        "allowJs": true,
        "checkJs": true,
        "noEmit": true,
        "strict": false,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "skipDefaultLibCheck": true
    },
    "include": ["frontend/**/*.js", "node_modules/**/*.js", "frontend/Desktop.d.ts", "frontend/api/PlutoNotebookAPI.ts"],
    "exclude": ["frontend/components/CellInput/tests/"]
}
