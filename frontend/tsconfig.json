{
  "compilerOptions": {
    "target": "ES2021",
    "module": "node16",
    "lib": ["ES2021", "DOM"],
    "allowJs": true,
    "declaration": true,
    "outDir": "./dist",
    "declarationDir": "./dist",
    "skipLibCheck": true,
    "strict": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["./"]
    }
  },
  "include": [
    ".",
    "standalone/**/*"
  ],
  "exclude": ["node_modules", "dist", "api", "components/CellInput/mixedParsers.js"]
}
